<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller" alignment="center">
    <TextArea fx:id="msgTextArea" scrollLeft="Infinity" focusTraversable="false">Messaging Story...</TextArea>
    <HBox fx:id="msgPanel">
        <TextField fx:id="msgField" promptText="Enter your message..." HBox.hgrow="ALWAYS" onAction="#sendMsg"/>
        <Button text="Send" onAction="#sendMsg"/>
    </HBox>
</VBox>